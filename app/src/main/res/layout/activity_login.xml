<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:attrs="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <cn.com.ichile.topvideonews.widget.RoundImageView
        android:id="@+id/riv_login_avatar"
        android:layout_width="@dimen/base100dp"
        android:layout_height="@dimen/base100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/base40dp"
        android:src="@drawable/bg"
        attrs:border_thickness="0dp"/>


    <LinearLayout
        android:id="@+id/ll_nav_head_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/base30dp"
        android:orientation="horizontal"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/btn_login_wx"
            android:layout_width="@dimen/base80dp"
            android:layout_height="@dimen/base80dp"
            >

            <cn.com.ichile.topvideonews.widget.RoundImageView
                android:layout_width="@dimen/base50dp"
                android:layout_height="@dimen/base50dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ssdk_oks_classic_wechat"
                attrs:border_thickness="0dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:padding="0dp"
                android:text="微信"
                android:textSize="18sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btn_login_qq"
            android:layout_width="@dimen/base80dp"
            android:layout_height="@dimen/base80dp"
            >

            <cn.com.ichile.topvideonews.widget.RoundImageView
                android:layout_width="@dimen/base50dp"
                android:layout_height="@dimen/base50dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ssdk_oks_classic_qq"
                attrs:border_thickness="0dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:padding="0dp"
                android:text="QQ"
                android:textSize="18sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btn_login_sina"
            android:layout_width="@dimen/base80dp"
            android:layout_height="@dimen/base80dp"
            >

            <cn.com.ichile.topvideonews.widget.RoundImageView
                android:layout_width="@dimen/base50dp"
                android:layout_height="@dimen/base50dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ssdk_oks_classic_sinaweibo"
                attrs:border_thickness="0dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:padding="0dp"
                android:text="微博"
                android:textSize="18sp"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>