<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:maxLines="2"
        android:padding="@dimen/base5dp"
        android:text="天王盖地虎 \n 小鸡炖蘑菇"
        android:textColor="@color/colorBlack"
        android:textSize="20sp"/>


    <RelativeLayout
        android:id="@+id/player_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_item_title"
        android:minHeight="200dip"
        android:visibility="visible">

        <ImageView
            android:id="@+id/iv_video_pre"
            android:layout_width="match_parent"
            android:layout_height="200dip"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:src="@drawable/bg"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/play_btn"
            android:layout_width="@dimen/base60dp"
            android:layout_height="@dimen/base60dp"
            android:layout_centerInParent="true"
            android:src="@drawable/newplay"/>

        <cn.com.ichile.topvideonews.widget.VideoSuperPlayer
            android:id="@+id/video"
            android:layout_width="match_parent"
            android:layout_height="200dip"
            android:layout_centerHorizontal="true"
            android:visibility="gone"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_item_btns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/player_layout"
        android:padding="@dimen/base5dp">

        <TextView
            android:id="@+id/tv_item_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="凤凰网"
            android:textSize="14sp"
            android:visibility="visible"/>

        <LinearLayout
            android:id="@+id/ll_item_btns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageButton
                android:id="@+id/ib_item_share"
                android:layout_width="@dimen/base30dp"
                android:layout_height="@dimen/base30dp"
                android:scaleType="center"
                android:src="@drawable/ic_menu_share"/>

            <ImageButton
                android:id="@+id/ib_item_like"
                android:layout_width="@dimen/base30dp"
                android:layout_height="@dimen/base30dp"
                android:layout_toRightOf="@id/ib_item_share"
                android:scaleType="center"
                android:src="@drawable/ic_menu_send"/>
        </LinearLayout>

        <!--<cn.sharesdk.socialization.QuickCommentBar-->
        <!--android:id="@+id/item_qcb"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_below="@id/ll_item_btns"-->
        <!--android:background="#fff3f3f3"-->
        <!--android:visibility="gone"/>-->
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rl_item_btns"
        android:background="@color/colorTabTopGray"></View>


</RelativeLayout>